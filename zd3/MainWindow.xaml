<Window x:Class="zd3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zd3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="TaskDescriptionTextBox" Width="300" Margin="0,0,0,10" />
            <ComboBox x:Name="DelegateComboBox" Width="300" Margin="0,0,0,10" />
            <Button x:Name="AddTaskButton" Content="Добавить задачу" Width="300" Click="AddTaskButton_Click" />
            <ListBox x:Name="TaskListBox" Margin="0,10,0,0" Height="150" />
            <Button x:Name="ExecuteTasksButton" Content="Выполнить задачи" Width="300" Click="ExecuteTasksButton_Click" />
        </StackPanel>
    </Grid>
</Window>